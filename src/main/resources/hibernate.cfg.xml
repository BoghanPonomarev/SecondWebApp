<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">1111</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/spring_practice?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">Bohdan</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- Подключение объектов сущностей -->
        <mapping package="ua.nure.ponomarev"/>
        <mapping class="ua.nure.ponomarev.enity.Franchise"/>
        <mapping class="ua.nure.ponomarev.enity.Cinema"/>
        <mapping class="ua.nure.ponomarev.enity.WorkHoursOfDay"/>
        <mapping class="ua.nure.ponomarev.enity.User"/>

    </session-factory>

</hibernate-configuration>